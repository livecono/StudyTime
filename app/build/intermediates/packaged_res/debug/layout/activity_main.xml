<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- 타이머 디스플레이 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/timerDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="72sp"
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            android:fontFamily="monospace" />

    </LinearLayout>

    <!-- 기본값 타이머 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:spacing="8dp">

        <Button
            android:id="@+id/btn5sec"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/timer_5sec"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn5min"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/timer_5min"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn10min"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/timer_10min"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn15min"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/timer_15min"
            android:layout_margin="4dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:spacing="8dp">

        <Button
            android:id="@+id/btn25min"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/timer_25min"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn50min"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/timer_50min"
            android:layout_margin="4dp" />

    </LinearLayout>

    <!-- 커스텀 타이머 입력 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:spacing="8dp">

        <EditText
            android:id="@+id/customTimerInput"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:inputType="number"
            android:hint="분 입력"
            android:padding="8dp"
            android:background="@android:drawable/edit_text"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btnCustomTimer"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="추가"
            android:layout_margin="4dp" />

    </LinearLayout>

    <!-- 커스텀 타이머 목록 -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:id="@+id/customTimerContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:spacing="8dp" />

    </HorizontalScrollView>

    <!-- 컨트롤 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:spacing="8dp"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnStart"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/start"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btnPause"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/pause"
            android:layout_margin="4dp"
            android:enabled="false" />

        <Button
            android:id="@+id/btnStop"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/stop"
            android:layout_margin="4dp"
            android:enabled="false" />

    </LinearLayout>

    <!-- 설정 버튼 -->
    <Button
        android:id="@+id/btnSettings"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/settings"
        android:layout_marginTop="16dp" />

</LinearLayout>
